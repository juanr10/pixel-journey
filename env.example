# PixelLife - Variables de Entorno
# Copia este archivo a .env y configura tus valores

# ========================================
# TIPO DE PERSISTENCIA
# ========================================
# Opciones: localStorage, firebase, hybrid
VITE_PERSISTENCE_TYPE=localStorage

# ========================================
# CONFIGURACIÓN DE FIREBASE
# ========================================
# Solo necesario si VITE_PERSISTENCE_TYPE es 'firebase' o 'hybrid'
VITE_FIREBASE_API_KEY=tu-api-key-aqui
VITE_FIREBASE_AUTH_DOMAIN=tu-proyecto.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=tu-proyecto-id
VITE_FIREBASE_STORAGE_BUCKET=tu-proyecto.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=tu-app-id

# ========================================
# CONFIGURACIÓN DE IMÁGENES
# ========================================
# Tamaño máximo de imagen (píxeles)
VITE_MAX_IMAGE_SIZE=800
# Calidad de compresión (0.1 - 1.0)
VITE_IMAGE_QUALITY=0.8
# Tamaño máximo de archivo (bytes) - 5MB por defecto
VITE_MAX_FILE_SIZE=5242880

# ========================================
# CONFIGURACIÓN DE SINCRONIZACIÓN
# ========================================
# Habilitar sincronización automática
VITE_SYNC_ENABLED=true
# Intervalo de sincronización (ms) - 30s por defecto
VITE_SYNC_INTERVAL=30000
# Habilitar sincronización en tiempo real (solo Firebase)
VITE_REALTIME_SYNC=true

# ========================================
# CONFIGURACIÓN DE MIGRACIÓN
# ========================================
# Habilitar migración automática
VITE_MIGRATION_ENABLED=true
# Mantener datos locales después de migración
VITE_KEEP_LOCAL_DATA=false

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================
# Modo debug
VITE_DEBUG=true
# Logs detallados
VITE_VERBOSE=true
# Simular latencia de red (ms) - 0 = sin simulación
VITE_NETWORK_LATENCY=0

# ========================================
# SEGURIDAD
# ========================================
# Contraseña para acceder a la aplicación
VITE_ACCESS_PASSWORD_APP=tu-contraseña-aqui

# ========================================
# ENTORNO
# ========================================
# NODE_ENV=development
# VITE_APP_ENV=development
